@AbapCatalog.sqlViewName: 'ZSD1_SQL'
@AbapCatalog.compiler.compareFilter: true
@AccessControl.authorizationCheck: #CHECK
@VDM.viewType: #BASIC
@EndUserText.label: 'Pending Deliver with RxPTL Basic View 1'
define view ZSD1 as select from likp as lp    
left outer join lips as ls on lp.vbeln = ls.vbeln 
left outer join vbap as vp on ls.vgbel = vp.vbeln
left outer join vbak as vk on vp.vbeln =vk.vbeln
left outer join kna1 as k1 on lp.kunnr = k1.kunnr   
left outer join t001 as t1 on vk.bukrs_vf = t1.bukrs
//left outer join t023t as tt on vp.matkl = tt.matkl 
{
    lp.vbeln,
    lp.gbstk,
    ls.meins,
    vp.vbeln as vpvbeln,
    vk.knumv,
    vk.bukrs_vf,
    lp.erdat,
    lp.wadat,
    lp.lddat,
    lp.tddat,
    lp.lfdat,
    lp.kodat,
    lp.fkdat,
    lp.bldat,
    lp.vstel,
    lp.vkorg,
    lp.lfart,
    lp.kunnr,
    k1.name1, 
    lp.knump,
    ls.wbsta,
    //vp.matkl,
    //tt.wgbez,
    //tt.wgbez60,
    t1.butxt,
    t1.ort01,
    t1.land1,
    t1.waers
        
}
where ( lp.gbstk <> 'C') and ( lp.gbstk <> 'B')  and (ls.wbsta <> 'C' ) and (ls.wbsta <> 'B') // and (vp.vbeln = '0000003310')


union 

select from likp as lp 
left outer join lips as ls on lp.vbeln = ls.vbeln 
left outer join vbap as vp on ls.vgbel = vp.vbeln
left outer join vbak as vk on vp.vbeln =vk.vbeln
left outer join kna1 as k1 on lp.kunnr = k1.kunnr   
left outer join t001 as t1 on vk.bukrs_vf = t1.bukrs
//left outer join t023t as tt on vp.matkl = tt.matkl 
{
    lp.vbeln,
    lp.gbstk,
    ls.meins,
    vp.vbeln as vpvbeln,
    vk.knumv,
    vk.bukrs_vf,
    lp.erdat,
    lp.wadat,
    lp.lddat,
    lp.tddat,
    lp.lfdat,
    lp.kodat,
    lp.fkdat,
    lp.bldat,
    lp.vstel,
    lp.vkorg,
    lp.lfart,
    lp.kunnr,
    k1.name1, 
    lp.knump,
    ls.wbsta,
    //vp.matkl,
    //tt.wgbez,
    //tt.wgbez60,
    t1.butxt,
    t1.ort01,
    t1.land1,
    t1.waers
        
}
where ( lp.gbstk <> 'C') and ( lp.gbstk <> 'B')  and (ls.wbsta <> 'C' ) and (ls.wbsta <> 'B') // and (vp.vbeln = '0000003310')
