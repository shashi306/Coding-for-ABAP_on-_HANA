@AbapCatalog.sqlViewName: 'ZCDS_SQL_EX6'
@EndUserText.label: 'joins'
define view ZCDS_DDL_EX6 as select from sbook as a
       inner join scustom as b
       on a.customid = b.id 

    {
    
    a.carrid,   
    a.connid,
    a.fldate,
    a.bookid,
    a.customid,
    b.name,
    b.email
    
        
}

where a.customid = '00000001' 
 
